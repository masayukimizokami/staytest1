<h1>USERの部屋紹介</h1>

<%= @user .username %>

<%= @user .email %>

<%= @user .profile %>

<%= link_to "user編集", edit_user_path(@user), class: "button: is-primary" %>


<% @user.rooms.each do |room| %>
<%= link_to "この部屋の詳細" , room_path(room) %>

    <% if @user.id == current_user.id%>  
        <%= link_to "この部屋を編集" , edit_room_path(room) %>
        <%= link_to "この部屋を削除" , room_path(room),method: :delete ,data:{confirm: "削除しますか？"}%>
    <% end %>
<% end %>